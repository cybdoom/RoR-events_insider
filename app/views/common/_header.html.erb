<header class="header">
  <div class="header-navigation">
    <div class="wrapper">
      <nav>
        <%= link_to root_path, class: 'logo-link' do %>
          <%= image_tag 'logo.png', alt: 'logo-header', class: 'logo' %>
        <% end %>
        <%= link_to t(:home), '/news', class: 'home-link' %>
        <%= link_to t(:about), '/contact' %>
        <%= link_to t(:subscribe), '/subscribe' %>
        <%= link_to t(:events), '/events' %>
        <%= link_to t(:news), '/news' %>
        <%= link_to t(:contact), '/contact' %>
        <% if user_signed_in? %>
          <%= link_to t(:logout), destroy_user_session_path, method: :delete %>
          <% if current_user.admin? %>
            <%= link_to 'Admin', admin_root_path, class: 'admin-link' %>
          <% end %>
        <% else %>
          <%= link_to t(:login), new_user_session_path, class: 'login-link' %>
          <%= link_to t(:signup), new_user_registration_path, class: 'signup-link' %>
        <% end %>
      </nav>
    </div>
  </div>
  <div class="quicksearch">
    <div class="quicksearch-wrapper">
      <h2>
        <%= t(:annotation) %>
      </h2>

      <div class="header-search-wrapper">
        <input id="site-search" class="header-search" type="search" name="search" placeholder="Search"/>
        <i class="icon icon-search desktop-only"></i>
      </div>
    </div>
  </div>
</header>
